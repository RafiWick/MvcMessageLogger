@{
    User? activeUser = ViewData["ActiveUser"] as User;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MvcMessageLogger</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MvcMessageLogger.styles.css" asp-append-version="true" />
</head>
<body class="bg-secondary bg-gradient">
    <header bg-info>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-info border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MvcMessageLogger</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <div class="col-10 list-group list-group-horizontal">
                        <li class="nav-item ">
                                <a class="nav-link text-dark list-group-item bg-primary bg-gradient" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark list-group-item bg-primary bg-gradient" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark list-group-item bg-primary bg-gradient" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark list-group-item bg-primary bg-gradient" asp-area="" asp-controller="Statistics" asp-action="Index">Statistics</a>
                            </li>
                        </div>
                        @if(activeUser != null)
                        {
                            <li class="nav-item col-1">
                                <form method="post" action="/users/logout">
                                    <button class="bg-danger" type="submit">Log Out</button>
                                </form>
                            </li>
                            <li class="nav-item col-1">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="@activeUser.Id">@activeUser.Username</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item col-2">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="LogIn">Log In</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - MvcMessageLogger - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
